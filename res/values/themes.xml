<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/header_gradient</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/MyActionBar.TextStyle</item>
    </style>


	<style name="MyActionBar.TextStyle" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
	    <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:gravity">center</item>
    </style>
     
</resources>
