<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/completeProfileMsg"
            style="@style/dtutorEditTextMessage"
            android:text=""
            android:textSize="20sp" />

        <Switch
            android:id="@+id/SwitchID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOff="Tutor"
            android:textOn="Tutee"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/myNotifications"
            style="@style/dtutorCategoryTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold|italic"
            android:text="@string/my_notifications" />

        <TextView
            android:id="@+id/notifications_present"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-thin"
            android:textStyle="italic"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/myReservationsLabel"
            style="@style/dtutorCategoryTextLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/my_reservations" />

        <TextView
            android:id="@+id/myReservations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-thin"
            android:textStyle="italic"
            android:text="You do not have any reservations" />
        
        <Button android:id="@+id/book"
           android:text="Reserve a Room"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" 
           android:layout_marginTop="20dip"
           android:layout_marginBottom="20dip"
           android:fontFamily="sans-serif-thin"
           android:onClick="bookings" />

        <LinearLayout
            android:id="@+id/notifications"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
        </LinearLayout>
        <!--
             <EditText
            android:id="@+id/notifications"
            style="@style/dtutorEditText"
            android:hint="notifications will go here" />
        -->
    </LinearLayout>

</ScrollView>